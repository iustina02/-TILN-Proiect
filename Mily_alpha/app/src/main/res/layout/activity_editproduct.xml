<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/ProdusTextView"
        android:layout_width="330dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/produsListView"
        android:layout_width="333dp"
        android:layout_height="162dp"
        android:background="@drawable/bg_key"
        android:choiceMode="singleChoice"
        android:listSelector="#666666"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ProdusTextView" />

    <EditText
        android:id="@+id/categ3_et"
        android:layout_width="326dp"
        android:layout_height="46dp"
        android:layout_marginTop="8dp"
        android:hint="Adauga o categorie.."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/produsListView" />

    <EditText
        android:id="@+id/categ3_et"
        android:layout_width="326dp"
        android:layout_height="46dp"
        android:hint="Data de expirare"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/categ3_et"
        app:layout_constraintVertical_bias="0.604" />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.938"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/categ3_et" />

    <Button
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/categ3_et" />

    <Button
        android:id="@+id/profile_button"
        android:layout_width="95dp"
        android:layout_height="44dp"
        android:layout_marginTop="96dp"
        android:text="Profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addButton" />

    <Button
        android:id="@+id/addProducts_button"
        android:layout_width="105dp"
        android:layout_height="44dp"
        android:layout_marginTop="96dp"
        android:text="+Products"
        app:layout_constraintStart_toEndOf="@+id/profile_button"
        app:layout_constraintTop_toBottomOf="@+id/addButton" />

    <Button
        android:id="@+id/frig_button"
        android:layout_width="71dp"
        android:layout_height="46dp"
        android:layout_marginTop="96dp"
        android:text="Fridge"
        app:layout_constraintStart_toEndOf="@+id/addProducts_button"
        app:layout_constraintTop_toBottomOf="@+id/nextButton" />

    <Button
        android:id="@+id/edit_button"
        android:layout_width="72dp"
        android:layout_height="43dp"
        android:layout_marginTop="96dp"
        android:text="Edit"
        app:layout_constraintStart_toEndOf="@+id/frig_button"
        app:layout_constraintTop_toBottomOf="@+id/nextButton" />


</androidx.constraintlayout.widget.ConstraintLayout>